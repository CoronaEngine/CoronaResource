# - CMake package configuration file for VisionScene
@PACKAGE_INIT@

set(VisionScene_VERSION "@PROJECT_VERSION@")

# Find dependencies
include(CMakeFindDependencyMacro)

# Find ktm (math library)
find_dependency(ktm)

# Find Assimp if Resource library was built
if(@VISIONSCENE_BUILD_RESOURCE@)
    find_dependency(assimp)
endif()

# Include targets
if(NOT TARGET VisionScene::Core)
    include("${CMAKE_CURRENT_LIST_DIR}/VisionSceneTargets.cmake")
endif()

# Convenience variables
set(VisionScene_INCLUDE_DIRS "${PACKAGE_PREFIX_DIR}/include")
set(VisionScene_LIBRARIES VisionScene::Core)

# Add optional libraries to VisionScene_LIBRARIES if they exist
if(TARGET VisionScene::Resource)
    list(APPEND VisionScene_LIBRARIES VisionScene::Resource)
endif()

# Set component found variables
set(VisionScene_Core_FOUND TRUE)
if(TARGET VisionScene::Resource)
    set(VisionScene_Resource_FOUND TRUE)
endif()

check_required_components(VisionScene)

